/* pages/sub/comments/comments.wxss */

page {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.user-name {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.comment {
  color: gray;
  font-size: 14px;
  padding: 10px 10px 10px 0;
}

.info {
  font-size: 12px;
  color: lightgray;
}

.contain {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-grow: 1;
}