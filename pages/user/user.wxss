/* pages/user/user.wxss */
.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx 20rpx 50rpx 20rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin: 0 20rpx 0 0;
}

.userinfo-nickname {
  font-weight: bold;
}

.userinfo-txt {
  flex: 1;
  overflow: hidden;
}

.userinfo-openid {
  color: gray;
  margin-top: 20rpx;
}