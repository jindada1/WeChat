/* pages/music/music.wxss */
swiper {
  height: 100%;
}

.nav-area {
  align-items: center;
  display: flex;
}

.controls {
  position: absolute;
  bottom: 0;
  width: 100%;
}

.buttons {
  display: flex;
  align-items: center;
}

.col {
  width: 25%;
  text-align: center;
}

.user-name {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.comment {
  font-size: 14px;
  color: gray;
  padding: 10px 10px 10px 0;
}

.info {
  font-size: 12px;
  color: lightgray;
}

.contain {
  height: 100%;
  width: 100%;
  display: flex;
  position: absolute;
  align-items: center;
  justify-content: center;
  font-size: 14px;
}

.slider-numb {
  width: 14px;
  height: 14px;
  background-color: #ee0a24;
  border-radius: 10px;
}