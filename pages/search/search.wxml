<!--pages/search/search.wxml-->
<view>
	<van-row>
		<van-col span="4">
			<van-dropdown-menu>
				<van-dropdown-item value="{{ platform }}" bind:change="platformChange" options="{{ platforms }}" />
			</van-dropdown-menu>
		</van-col>
		<van-col span="20">
			<van-search placeholder="请输入搜索关键词" bind:change="inputChange" bind:search="Search">
			</van-search>
		</van-col>
	</van-row>
	<van-tabs animated active="{{ searchType }}" bind:change="typeChange">
		<van-tab title="音乐" name="songs" id="tab-content">
			<song-list id="song-list" bind:nextpage="getNext"></song-list>
		</van-tab>
		<van-tab title="MV" name="mv">
			<mv-list id="mv-list" bind:nextpage="getNext"></mv-list>
		</van-tab>
	</van-tabs>
</view>