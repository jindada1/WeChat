/* components/song-list.wxss */
.no-wrap-text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 14px;
}

.contain {
  height: 100%;
  width: 100%;
  display: flex;
  position: absolute;
  align-items: center;
  justify-content: center;
  font-size: 14px;
}

.options {
  background-color: white;
  align-items: center;
  padding: 3px 16px;
  font-size: 14px;
  display: flex;
}

.option {
  flex-grow: 1;
  text-align: center;
}