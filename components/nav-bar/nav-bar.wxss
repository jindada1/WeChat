/* components/nav-bar/nav-bar.wxss */
.navbar {
  width: 100%;
  overflow: hidden;
  background: #fff;
  position: relative;
}

.progress-container {
  position: absolute;
  bottom: 0;
  width: 100%;
  background-color: whitesmoke;
}

.progress-content {
  height: 100%;
  background-color: lightgray;
}

.safe-area {
  height: 100%;
  display: flex;
  position: absolute;
  align-items: center;
  font-size: 14px;
  flex: 1;
  overflow: hidden;
}

.no-wrap-text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 14px;
}

.sub-text {
  font-size: 12px;
  color: lightslategrey;
}

.cover-holder {
  height: 30px;
  width: 30px;
  flex-shrink: 0;
  margin-right: 4px;
}

.status {
  position: absolute;
  top: 12px;
  left: 8px;
}